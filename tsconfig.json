{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
